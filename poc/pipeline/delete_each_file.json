								"dataset": {
									"referenceName": "test_delete",
									"type": "DatasetReference",
									"parameters": {
										"folder_name": {
											"value": "@item()",
											"type": "Expression"
										}
									}
								},
								"enableLogging": false,
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								}
							}
						}
					]
				}
			}
		],
		"variables": {
			"folder_array": {
				"type": "Array",
				"defaultValue": [
